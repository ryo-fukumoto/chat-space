.wrapper

  .chat-side
    .chat-side__side-header
      .chat-side__side-header__box
        .chat-side__side-header__box__user-name
          = current_user.name
        .chat-side__side-header__box__menu
          = link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'icon'
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'

    .chat-side__groups
      .chat-side__groups__group
        - current_user.groups.each do |group|
          = link_to group_messages_path(group) do
            .chat-side__groups__group__name
              = group.name
            .chat-side__groups__group__latest-message
              = group.show_last_message
        