.chat-main__messages__message__upper-info
  .chat-main__messages__message__upper-info__talker
    = message.user.name
  .chat-main__messages__message__upper-info__date
    = message.created_at.strftime("%Y/%m/%d %H:%M")
.chat-main__messages__message__text
  - if message.content.present?
    %p.chat-main__messages__message__text__content
      = message.content
  = image_tag message.image.url, class: '.chat-main__messages__message__text__image' if message.image.present?